    <script>
      // Mobile menu toggle only (no scroll effect)
      const mobileToggle = document.querySelector('.mobile-toggle');
      const body = document.body;

      // Mobile menu toggle
      if (mobileToggle) {
        mobileToggle.addEventListener('click', () => {
          body.classList.toggle('nav-open');
        });
      }

      // Close mobile menu on link click
      document.querySelectorAll('.mobile-nav-link').forEach(link => {
        link.addEventListener('click', () => {
          body.classList.remove('nav-open');
        });
      });

      // Contact form submission with Email/WhatsApp choice
      const contactForm = document.getElementById('contactForm');
      const sendModal = document.getElementById('sendModal');
      const closeModal = document.getElementById('closeModal');
      const sendEmailBtn = document.getElementById('sendEmail');
      const sendWhatsAppBtn = document.getElementById('sendWhatsApp');
      
      let formDataCache = null;

      // Lakeside Farms contact info
      const lakesideEmail = 'lakesidefarmgh@gmail.com';
      const lakesidePhone = '233543024779'; // WhatsApp number (country code + number, no + or spaces)

      // Custom Notification System
      function showNotification(title, message, type = 'success') {
        const container = document.getElementById('notificationContainer');
        
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        
        const icons = {
          success: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4CAF50" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>',
          error: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ff6b6b" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>',
          warning: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#ffa726" stroke-width="2"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path><line x1="12" y1="9" x2="12" y2="13"></line><line x1="12" y1="17" x2="12.01" y2="17"></line></svg>',
          info: '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#42a5f5" stroke-width="2"><circle cx="12" cy="12" r="10"></circle><line x1="12" y1="16" x2="12" y2="12"></line><line x1="12" y1="8" x2="12.01" y2="8"></line></svg>'
        };
        
        notification.innerHTML = `
          <div class="notification-icon">${icons[type] || icons.success}</div>
          <div class="notification-content">
            <div class="notification-title">${title}</div>
            <div class="notification-message">${message}</div>
          </div>
          <button class="notification-close" onclick="this.parentElement.remove()">&times;</button>
        `;
        
        container.appendChild(notification);
        
        // Auto remove after 6 seconds
        setTimeout(() => {
          notification.classList.add('closing');
          setTimeout(() => notification.remove(), 300);
        }, 6000);
      }

      if (contactForm) {
        contactForm.addEventListener('submit', (e) => {
          e.preventDefault();
          
          const formData = new FormData(contactForm);
          formDataCache = {
            name: formData.get('name'),
            email: formData.get('email'),
            message: formData.get('message')
          };

          // Show modal for user to choose send method
          sendModal.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      }

      // Close modal
      const closeModalFunction = () => {
        sendModal.classList.remove('active');
        document.body.style.overflow = '';
      };

      closeModal.addEventListener('click', closeModalFunction);
      sendModal.querySelector('.send-modal-overlay').addEventListener('click', closeModalFunction);

      // Send via Email (Server-side)
      sendEmailBtn.addEventListener('click', async () => {
        if (formDataCache) {
          try {
            // Disable button and show loading state
            sendEmailBtn.disabled = true;
            sendEmailBtn.innerHTML = '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10" opacity="0.25"></circle><path d="M12 2 A10 10 0 0 1 22 12" stroke-linecap="round"></path></svg><span>Sending...</span>';
            sendEmailBtn.style.opacity = '0.6';

            const response = await fetch('/contact', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify(formDataCache),
            });

            const result = await response.json();

            if (result.success) {
              // Show success message
              showNotification('Message Sent Successfully!', result.message, 'success');
              closeModalFunction();
              contactForm.reset();
              formDataCache = null;
            } else {
              // Show error
              showNotification('Email Sending Failed', result.message + '\n\nTip: You can try sending via WhatsApp using the button above.', 'error');
            }
          } catch (error) {
            // Network error
            showNotification('Connection Error', 'Unable to connect to the server. Please check your internet connection or try sending via WhatsApp.', 'error');
          } finally {
            // Reset button state
            sendEmailBtn.disabled = false;
            sendEmailBtn.innerHTML = '<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg><span>Send via Email</span>';
            sendEmailBtn.style.opacity = '1';
          }
        }
      });

      // Send via WhatsApp
      sendWhatsAppBtn.addEventListener('click', () => {
        if (formDataCache) {
          const whatsappMessage = encodeURIComponent(
            `*Contact from Website*\n\n` +
            `*Name:* ${formDataCache.name}\n` +
            `*Email:* ${formDataCache.email}\n\n` +
            `*Message:*\n${formDataCache.message}`
          );
          
          window.open(`https://wa.me/${lakesidePhone}?text=${whatsappMessage}`, '_blank');
          
          closeModalFunction();
          contactForm.reset();
          formDataCache = null;
        }
      });

      // Google Maps Integration with Directions
      let map;
      let directionsService;
      let directionsRenderer;
      let branches = [];
      let branchMarkers = [];
      let selectedBranch = null;

      // Load branches data from server
      {{#if hasBranches}}
      branches = [
        {{#each branches}}
        {
          id: {{id}},
          name: "{{name}}",
          address: "{{address}}",
          lat: {{latitude}},
          lng: {{longitude}}
        }{{#unless @last}},{{/unless}}
        {{/each}}
      ];
      {{/if}}

      function initMap() {
        // Set initial selected branch (first one by default)
        if (branches.length > 0) {
          selectedBranch = branches[0];
          updateSelectedBranchInfo();
        }

        // Initialize map centered on first branch or default location
        const center = selectedBranch ? { lat: selectedBranch.lat, lng: selectedBranch.lng } : { lat: 5.6809, lng: -0.2420 };
        
        map = new google.maps.Map(document.getElementById('map'), {
          center: center,
          zoom: branches.length > 1 ? 7 : 14, // Zoom out if multiple branches
          styles: [
            {
              featureType: 'poi',
              elementType: 'labels',
              stylers: [{ visibility: 'off' }]
            }
          ]
        });

        // Add markers for all branches
        branches.forEach((branch, index) => {
          const marker = new google.maps.Marker({
            position: { lat: branch.lat, lng: branch.lng },
            map: map,
            title: branch.name,
            icon: {
              url: index === 0 ? 'http://maps.google.com/mapfiles/ms/icons/green-dot.png' : 'http://maps.google.com/mapfiles/ms/icons/red-dot.png'
            }
          });

          const infoWindow = new google.maps.InfoWindow({
            content: `<div style="padding: 8px;"><strong>${branch.name}</strong><br>${branch.address}</div>`
          });

          marker.addListener('click', () => {
            infoWindow.open(map, marker);
            // Update branch selection when marker is clicked
            const branchSelect = document.getElementById('branchSelect');
            if (branchSelect) {
              branchSelect.value = branch.id;
              updateSelectedBranch();
            }
          });

          branchMarkers.push({ marker, infoWindow, branch });
        });

        // Initialize directions service and renderer
        directionsService = new google.maps.DirectionsService();
        directionsRenderer = new google.maps.DirectionsRenderer({
          map: map,
          suppressMarkers: false
        });

        // Autocomplete for location input
        const input = document.getElementById('userLocation');
        const autocomplete = new google.maps.places.Autocomplete(input, {
          componentRestrictions: { country: 'gh' }, // Restrict to Ghana
          fields: ['geometry', 'name']
        });

        // Branch selector change handler
        const branchSelect = document.getElementById('branchSelect');
        if (branchSelect) {
          branchSelect.addEventListener('change', updateSelectedBranch);
        }
      }

      function updateSelectedBranch() {
        const branchSelect = document.getElementById('branchSelect');
        const selectedOption = branchSelect.options[branchSelect.selectedIndex];
        const branchId = parseInt(selectedOption.value);
        
        selectedBranch = branches.find(b => b.id === branchId);
        updateSelectedBranchInfo();
        
        // Update marker colors
        branchMarkers.forEach(({ marker, branch }) => {
          marker.setIcon({
            url: branch.id === branchId ? 
              'http://maps.google.com/mapfiles/ms/icons/green-dot.png' : 
              'http://maps.google.com/mapfiles/ms/icons/red-dot.png'
          });
        });

        // Center map on selected branch
        if (selectedBranch) {
          map.panTo({ lat: selectedBranch.lat, lng: selectedBranch.lng });
          map.setZoom(14);
        }

        // Clear any existing directions
        if (directionsRenderer) {
          directionsRenderer.setDirections({ routes: [] });
        }
      }

      function updateSelectedBranchInfo() {
        const branchNameEl = document.getElementById('branchName');
        const branchAddressEl = document.getElementById('branchAddress');
        
        if (branchNameEl && branchAddressEl && selectedBranch) {
          branchNameEl.textContent = selectedBranch.name;
          branchAddressEl.textContent = selectedBranch.address;
        }
      }

      // Get directions from user location to selected branch
      function calculateAndDisplayRoute(origin) {
        if (!selectedBranch) {
          showNotification('No Branch Selected', 'Please select a branch location first.', 'warning');
          return;
        }

        const request = {
          origin: origin,
          destination: { lat: selectedBranch.lat, lng: selectedBranch.lng },
          travelMode: google.maps.TravelMode.DRIVING
        };

        directionsService.route(request, (result, status) => {
          if (status === 'OK') {
            directionsRenderer.setDirections(result);
            
            // Show distance and duration with styled message
            const route = result.routes[0].legs[0];
            const branchName = selectedBranch ? selectedBranch.name : 'Lakeside Farms';
            const message = `Destination: ${branchName}\n\nDistance: ${route.distance.text}\nEstimated Travel Time: ${route.duration.text}\n\nFollow the route shown on the map above. Safe travels!`;
            showNotification('Route Found!', message, 'success');
          } else {
            let errorTitle = 'Route Not Found';
            let errorMessage = '';
            
            if (status === 'ZERO_RESULTS') {
              errorMessage = 'No route found. Please check your location and try again.\n\nNeed help? Call us: +233 543 024 779';
            } else if (status === 'NOT_FOUND') {
              errorMessage = 'Location not found. Please enter a valid address in Ghana.\n\nTip: Try entering a nearby landmark or city name.';
            } else if (status === 'INVALID_REQUEST') {
              errorMessage = 'Invalid location. Please enter your starting point in the search box above.';
            } else {
              errorMessage = 'Please try again or contact us for assistance:\n\nPhone: +233 543 024 779\nWhatsApp: +233 543 024 779';
            }
            
            showNotification(errorTitle, errorMessage, 'error');
          }
        });
      }

      // Get Directions button handler
      document.getElementById('getDirectionsBtn').addEventListener('click', () => {
        const userLocation = document.getElementById('userLocation').value;
        
        if (!userLocation) {
          showNotification('Location Required', 'Please enter your starting location in the search box above to get directions to Lakeside Farms.', 'warning');
          return;
        }

        calculateAndDisplayRoute(userLocation);
      });

      // Use current location button handler
      document.getElementById('useMyLocationBtn').addEventListener('click', () => {
        if (navigator.geolocation) {
          // Show loading state
          const btn = document.getElementById('useMyLocationBtn');
          const originalText = btn.innerHTML;
          btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="animation: spin 1s linear infinite;"><circle cx="12" cy="12" r="10" opacity="0.25"></circle><path d="M12 2 A10 10 0 0 1 22 12"></path></svg> Getting your location...';
          btn.disabled = true;
          
          navigator.geolocation.getCurrentPosition(
            (position) => {
              const userPos = {
                lat: position.coords.latitude,
                lng: position.coords.longitude
              };
              
              calculateAndDisplayRoute(userPos);
              document.getElementById('userLocation').value = 'ðŸ“ Your Current Location';
              
              // Reset button
              btn.innerHTML = originalText;
              btn.disabled = false;
            },
            (error) => {
              let errorTitle = 'Location Access Error';
              let errorMsg = '';
              
              if (error.code === error.PERMISSION_DENIED) {
                errorMsg = 'Please allow location access in your browser settings, or enter your location manually in the search box above.';
              } else if (error.code === error.POSITION_UNAVAILABLE) {
                errorMsg = 'Location information is unavailable. Please enter your address manually.';
              } else if (error.code === error.TIMEOUT) {
                errorMsg = 'Location request timed out. Please try again or enter your address manually.';
              } else {
                errorMsg = 'Unable to get your location. Please enter your address in the search box above.';
              }
              
              showNotification(errorTitle, errorMsg, 'warning');
              
              // Reset button
              btn.innerHTML = originalText;
              btn.disabled = false;
            }
          );
        } else {
          showNotification('Geolocation Not Supported', 'Your browser doesn\'t support location services. Please enter your address manually in the search box above.', 'warning');
        }
      });

      // Initialize map when Google Maps API is loaded
      window.addEventListener('load', () => {
        if (typeof google !== 'undefined') {
          initMap();
        }
      });
    </script>
  </body>
