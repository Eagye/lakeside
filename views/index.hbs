    <script>
      const slider = document.querySelector('.hero-slider');
      if (slider) {
        const slides = Array.from(slider.querySelectorAll('.hero-slide'));
        const dots = Array.from(document.querySelectorAll('.hero-dot'));
        const prevBtn = document.querySelector('.hero-nav-prev');
        const nextBtn = document.querySelector('.hero-nav-next');
        
        if (slides.length > 0) {
          let currentIndex = 0;
          let autoplayTimer = null;
          const interval = Number(slider.dataset.interval || 8000);
          
          const updateVisibleDots = (activeIndex) => {
            const maxVisibleDots = 3;
            const totalDots = dots.length;
            
            if (totalDots <= maxVisibleDots) {
              // Show all dots if there are 3 or fewer
              dots.forEach(dot => dot.style.display = 'block');
            } else {
              // Show only 3 dots: previous, current, and next
              dots.forEach((dot, idx) => {
                // Show current dot and one on each side
                if (idx === activeIndex || 
                    idx === activeIndex - 1 || 
                    idx === activeIndex + 1) {
                  dot.style.display = 'block';
                } else {
                  dot.style.display = 'none';
                }
              });
            }
          };

          const setActive = (index) => {
            slides.forEach((slide, idx) => {
              slide.classList.toggle('is-active', idx === index);
            });
            dots.forEach((dot, idx) => {
              dot.classList.toggle('is-active', idx === index);
            });
            currentIndex = index;
            updateVisibleDots(index);
          };
          
          const startAutoplay = () => {
            if (slides.length > 1) {
              autoplayTimer = setInterval(() => {
                const nextIndex = (currentIndex + 1) % slides.length;
                setActive(nextIndex);
              }, interval);
            }
          };
          
          const stopAutoplay = () => {
            if (autoplayTimer) {
              clearInterval(autoplayTimer);
              autoplayTimer = null;
            }
          };
          
          const restartAutoplay = () => {
            stopAutoplay();
            startAutoplay();
          };
          
          // Initialize
          setActive(0);
          startAutoplay();
          
          // Navigation controls
          if (prevBtn) {
            prevBtn.addEventListener('click', () => {
              const prevIndex = (currentIndex - 1 + slides.length) % slides.length;
              setActive(prevIndex);
              restartAutoplay();
            });
          }
          
          if (nextBtn) {
            nextBtn.addEventListener('click', () => {
              const nextIndex = (currentIndex + 1) % slides.length;
              setActive(nextIndex);
              restartAutoplay();
            });
          }
          
          // Dot controls
          dots.forEach((dot, index) => {
            dot.addEventListener('click', () => {
              setActive(index);
              restartAutoplay();
            });
          });
          
          // Pause on hover
          const hero = document.querySelector('.hero');
          if (hero) {
            hero.addEventListener('mouseenter', stopAutoplay);
            hero.addEventListener('mouseleave', startAutoplay);
          }
        }
      }
    </script>
    <script>
      document.querySelectorAll('[data-offer-card]').forEach((card) => {
        const slider = card.querySelector('.offer-slider');
        if (!slider) {
          return;
        }
        const slides = Array.from(slider.querySelectorAll('.offer-slide'));
        const dots = Array.from(card.querySelectorAll('.offer-dot'));
        if (slides.length === 0) {
          return;
        }
        let currentIndex = 0;
        const setActive = (index) => {
          slides.forEach((slide, idx) => {
            slide.classList.toggle('is-active', idx === index);
          });
          dots.forEach((dot, idx) => {
            dot.classList.toggle('is-active', idx === index);
          });
          currentIndex = index;
        };
        setActive(0);
        const interval = Number(slider.dataset.interval || 5000);
        let timer = setInterval(() => {
          setActive((currentIndex + 1) % slides.length);
        }, interval);

        card.addEventListener('mouseenter', () => {
          clearInterval(timer);
        });
        card.addEventListener('mouseleave', () => {
          timer = setInterval(() => {
            setActive((currentIndex + 1) % slides.length);
          }, interval);
        });

        dots.forEach((dot) => {
          dot.addEventListener('click', () => {
            const index = Number(dot.dataset.index || 0);
            clearInterval(timer);
            setActive(index);
          });
        });
      });
    </script>
