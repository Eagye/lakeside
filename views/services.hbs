    <script>
      // Navbar scroll effect and mobile menu
      const header = document.querySelector('.site-header');
      const mobileToggle = document.querySelector('.mobile-toggle');
      const body = document.body;

      // Add scroll effect
      let lastScroll = 0;
      window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll > 50) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
        
        lastScroll = currentScroll;
      });

      // Mobile menu toggle
      if (mobileToggle) {
        mobileToggle.addEventListener('click', () => {
          body.classList.toggle('nav-open');
        });
      }

      // Close mobile menu when clicking nav links
      const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
      mobileNavLinks.forEach(link => {
        link.addEventListener('click', () => {
          body.classList.remove('nav-open');
        });
      });
    </script>
    <script>
      const searchInput = document.querySelector('.services-search');
      const chips = Array.from(document.querySelectorAll('.filter-chip'));
      const cards = Array.from(document.querySelectorAll('.service-card'));
      const emptyState = document.getElementById('emptyState');
      const servicesGrid = document.getElementById('servicesGrid');

      // Calculate initial counts
      const updateCounts = () => {
        const totalCount = cards.length;
        const allCountEl = document.getElementById('count-all');
        if (allCountEl) {
          allCountEl.textContent = totalCount;
        }
      };

      const applyFilters = () => {
        const active = chips.find((chip) => chip.classList.contains('is-active'));
        const filter = active?.dataset.filter ?? 'all';
        const query = searchInput?.value?.toLowerCase() ?? '';
        let visibleCount = 0;

        cards.forEach((card) => {
          const matchesCategory =
            filter === 'all' || card.dataset.category === filter;
          const text = card.textContent?.toLowerCase() ?? '';
          const matchesQuery = !query || text.includes(query);
          const isVisible = matchesCategory && matchesQuery;
          
          if (isVisible) {
            card.style.display = '';
            card.style.animation = 'fadeInUp 0.5s ease forwards';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });

        // Show/hide empty state
        if (visibleCount === 0) {
          emptyState.style.display = 'flex';
          servicesGrid.style.display = 'none';
        } else {
          emptyState.style.display = 'none';
          servicesGrid.style.display = 'grid';
        }
      };

      chips.forEach((chip) => {
        chip.addEventListener('click', () => {
          chips.forEach((item) => item.classList.remove('is-active'));
          chip.classList.add('is-active');
          applyFilters();
        });
      });

      if (searchInput) {
        searchInput.addEventListener('input', applyFilters);
      }

      // Initialize counts
      updateCounts();

      // Fade in cards on load
      setTimeout(() => {
        cards.forEach((card, index) => {
          card.style.animation = `fadeInUp 0.6s ease ${index * 0.1}s forwards`;
        });
      }, 100);
    </script>
    <script>
      // Service Card Image Sliders
      document.querySelectorAll('.service-slider').forEach((slider) => {
        const track = slider.querySelector('.service-slider-track');
        const slides = slider.querySelectorAll('.service-slide');
        const prevBtn = slider.querySelector('.service-slider-prev');
        const nextBtn = slider.querySelector('.service-slider-next');
        const dotsContainer = slider.querySelector('.service-slider-dots');
        
        if (!track || slides.length <= 1) return;

        let currentIndex = 0;
        const totalSlides = slides.length;

        // Create dots
        slides.forEach((_, index) => {
          const dot = document.createElement('button');
          dot.classList.add('service-slider-dot');
          dot.setAttribute('aria-label', `Go to slide ${index + 1}`);
          if (index === 0) dot.classList.add('active');
          dot.addEventListener('click', () => goToSlide(index));
          dotsContainer.appendChild(dot);
        });

        const dots = dotsContainer.querySelectorAll('.service-slider-dot');

        function updateSlider() {
          track.style.transform = `translateX(-${currentIndex * 100}%)`;
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentIndex);
          });
        }

        function goToSlide(index) {
          currentIndex = index;
          updateSlider();
        }

        function nextSlide() {
          currentIndex = (currentIndex + 1) % totalSlides;
          updateSlider();
        }

        function prevSlide() {
          currentIndex = (currentIndex - 1 + totalSlides) % totalSlides;
          updateSlider();
        }

        if (prevBtn) prevBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          prevSlide();
        });

        if (nextBtn) nextBtn.addEventListener('click', (e) => {
          e.stopPropagation();
          nextSlide();
        });

        // Auto-play
        let autoplayInterval = setInterval(nextSlide, 4000);

        // Pause on hover
        slider.addEventListener('mouseenter', () => {
          clearInterval(autoplayInterval);
        });

        slider.addEventListener('mouseleave', () => {
          autoplayInterval = setInterval(nextSlide, 4000);
        });

        // Touch swipe support
        let touchStartX = 0;
        let touchEndX = 0;

        track.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        track.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          if (touchStartX - touchEndX > 50) nextSlide();
          if (touchEndX - touchStartX > 50) prevSlide();
        });
      });
    </script>
