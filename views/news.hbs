                  <div class="news-card-image">
                    {{#if this.coverImageUrl}}
                      <img
                        src="{{this.coverImageUrl}}"
                        alt="{{this.title}}"
                        loading="lazy"
                        decoding="async"
                      />
                    {{else if this.images.[0]}}
                      <img
                        src="{{this.images.[0].url}}"
                        alt="{{this.title}}"
                        loading="lazy"
                        decoding="async"
                      />
                    {{/if}}
                    {{#if this.featured}}
                      <div class="news-card-badge featured">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
