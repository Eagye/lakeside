                    {{else}}
                      <div class="news-card-badge">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="16" y1="2" x2="16" y2="6"></line>
                          <line x1="8" y1="2" x2="8" y2="6"></line>
                          <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        New
                      </div>
                    {{/if}}
                  </div>
                  <div class="news-card-content">
                    <div class="news-card-meta">
                      <span class="news-meta-item">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                          <line x1="16" y1="2" x2="16" y2="6"></line>
                          <line x1="8" y1="2" x2="8" y2="6"></line>
                          <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        {{formatDate this.publishDate}}
                      </span>
                      {{#if this.images}}
                        <span class="news-meta-item">
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                            <polyline points="21 15 16 10 5 21"></polyline>
                          </svg>
                          {{this.images.length}} Photos
                        </span>
                      {{/if}}
                    </div>
                    <h3 class="news-card-title">{{this.title}}</h3>
                    <p class="news-card-excerpt">{{this.excerpt}}</p>
                    <div class="news-card-footer">
                      {{#if this.author}}
                        <div class="news-card-author">
                          <div class="author-avatar">{{authorInitials this.author}}</div>
                          <span>{{this.author}}</span>
                        </div>
                      {{else}}
                        <div class="news-card-author">
                          <div class="author-avatar">LF</div>
                          <span>Lakeside Farms</span>
                        </div>
                      {{/if}}
                      <a href="/news/{{this.id}}" class="read-more-btn">
                        Read More
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <line x1="5" y1="12" x2="19" y2="12"></line>
                          <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                      </a>
                    </div>
                  </div>
                </article>
              {{/each}}
            </div>
          {{else}}
            <div class="news-empty">
              <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke-width="1.5">
