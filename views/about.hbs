    <script>
      // Navbar scroll effect and mobile menu
      const header = document.querySelector('.site-header');
      const mobileToggle = document.querySelector('.mobile-toggle');
      const body = document.body;

      // Add scroll effect
      let lastScroll = 0;
      window.addEventListener('scroll', () => {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll > 50) {
          header.classList.add('scrolled');
        } else {
          header.classList.remove('scrolled');
        }
        
        lastScroll = currentScroll;
      });

      // Mobile menu toggle
      if (mobileToggle) {
        mobileToggle.addEventListener('click', () => {
          body.classList.toggle('nav-open');
        });
      }

      // Close mobile menu when clicking nav links
      const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
      mobileNavLinks.forEach(link => {
        link.addEventListener('click', () => {
          body.classList.remove('nav-open');
        });
      });
    </script>
    <script>
      // Main carousel for overlapping images
      const carousel = document.querySelector('.about-intro-carousel');
      if (carousel) {
        const slides = Array.from(carousel.querySelectorAll('.about-intro-slide'));
        const dots = Array.from(carousel.querySelectorAll('.about-intro-dot'));
        const interval = Number(carousel.dataset.interval || 6000);
        let currentPairIndex = 0;
        let mainTimer;

        const setActive = (pairIndex) => {
          // Show pairs of images (2 at a time for overlapping effect)
          slides.forEach((slide, idx) => {
            const slideGroup = Math.floor(idx / 2);
            slide.classList.toggle('is-active', slideGroup === pairIndex);
          });
          
          dots.forEach((dot, idx) => {
            const dotGroup = Math.floor(idx / 2);
            dot.classList.toggle('is-active', dotGroup === pairIndex);
          });
          
          currentPairIndex = pairIndex;
        };

        const startMain = () => {
          const numPairs = Math.ceil(slides.length / 2);
          if (numPairs <= 1) {
            return;
          }
          mainTimer = setInterval(() => {
            setActive((currentPairIndex + 1) % numPairs);
          }, interval);
        };

        const stopMain = () => {
          if (mainTimer) clearInterval(mainTimer);
        };

        setActive(0);
        startMain();

        carousel.addEventListener('mouseenter', stopMain);
        carousel.addEventListener('mouseleave', startMain);

        dots.forEach((dot, dotIndex) => {
          dot.addEventListener('click', () => {
            const pairIndex = Math.floor(dotIndex / 2);
            stopMain();
            setActive(pairIndex);
            startMain();
          });
        });
      }

      // Independent accent frame carousel
      (function() {
        const accentContainer = document.querySelector('.accent-frame-carousel');
        if (!accentContainer) return;
        
        const accentFrames = Array.from(accentContainer.querySelectorAll('.accent-frame'));
        console.log('Accent frames found:', accentFrames.length);
        
        if (accentFrames.length <= 1) {
          console.log('Only', accentFrames.length, 'accent frame(s), skipping carousel');
          return;
        }

        let currentIndex = 0;
        const accentInterval = 3000; // 3 seconds
        
        const showFrame = (index) => {
          accentFrames.forEach((frame, idx) => {
            frame.classList.toggle('is-active', idx === index);
          });
          currentIndex = index;
        };

        // Start cycling
        showFrame(0);
        const timer = setInterval(() => {
          const nextIndex = (currentIndex + 1) % accentFrames.length;
          showFrame(nextIndex);
        }, accentInterval);

        console.log('Accent carousel started with', accentFrames.length, 'frames');
      })();
    </script>
    <script>
      const featureCarousel = document.querySelector('[data-feature-carousel]');
      if (featureCarousel) {
        const slides = Array.from(featureCarousel.querySelectorAll('.feature-slide'));
        const dots = Array.from(featureCarousel.querySelectorAll('.feature-dot'));
        const interval = Number(featureCarousel.dataset.interval || 6000);
        let currentIndex = 0;
        let timer;

        const setActive = (index) => {
          slides.forEach((slide, idx) => {
            slide.classList.toggle('is-active', idx === index);
          });
          dots.forEach((dot, idx) => {
            dot.classList.toggle('is-active', idx === index);
          });
          currentIndex = index;
        };

        const start = () => {
          if (slides.length <= 1) {
            return;
          }
          timer = setInterval(() => {
            setActive((currentIndex + 1) % slides.length);
          }, interval);
        };

        const stop = () => {
          if (timer) {
            clearInterval(timer);
          }
        };

        setActive(0);
        start();

        featureCarousel.addEventListener('mouseenter', stop);
        featureCarousel.addEventListener('mouseleave', start);

        dots.forEach((dot) => {
          dot.addEventListener('click', () => {
            const index = Number(dot.dataset.index || 0);
            stop();
            setActive(index);
            start();
          });
        });
      }
